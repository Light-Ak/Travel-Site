<% layout('layouts/boilerplate') %>

<div class="container my-2">
  <div class="row justify-content-center">
    <div class="col-lg-8">

      <!-- Listing Header -->
      <div class="text-center mb-4">
        <h2 class="fw-bold"><%= listing.title %></h2>
        <h5><p class="text-muted mb-1">
          <i class="bi bi-geo-alt-fill me-1"></i>
          <%= listing.location %>, <%= listing.country %>
        </p></h5>
        <p class="text-secondary small mb-1">
          <b>Category:</b> <%= listing.category %>
        </p>
        <p class="text-secondary small mb-0">
          Owned by <span class="fw-semibold text-dark"><%= listing.owner.username %></span>
        </p>
      </div>

      <!-- Listing Card -->
      <div class="card shadow-sm border-0 mb-5">
        <img src="<%= listing.image.url %>" class="card-img-top rounded-top show-img-large" alt="listing_image" style="height: 400px; object-fit: cover; width: 100%;">
        <div class="card-body">
          <h5 class="text-primary mb-3 fw-semibold">
            ₹<%= listing.price.toLocaleString("en-IN") %> / night
          </h5>
          <p class="text-secondary"><%= listing.description %></p>

          <!-- Booking Button -->
          <div class="d-grid mb-3">
            <a href="#" class="btn btn-success btn-lg">
              <i class="bi bi-calendar-check me-1"></i>Book Now
            </a>
          </div>

          <% if (currentUser && currentUser._id.equals(listing.owner._id)) { %>
            <div class="d-flex gap-3">
              <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-primary flex-grow-1">
                <i class="bi bi-pencil-square me-1"></i>Edit Listing
              </a>
              <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="flex-grow-1">
                <button type="submit" class="btn btn-outline-danger w-100" onclick="return confirm('Are you sure you want to delete this listing?');">
                  <i class="bi bi-trash me-1"></i>Delete
                </button>
              </form>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Nearby Listings Section -->
      <% if (nearbyListings && nearbyListings.length > 0) { %>
        <hr class="my-5">
        <h3 class="mb-4 text-center fw-bold">Nearby Places You Might Like</h3>
        <div class="row row-cols-1 row-cols-md-2 g-4">
          <% nearbyListings.forEach(near => { %>
            <div class="col">
              <div class="card border-0 shadow-sm h-100">
                <img src="<%= near.image.url %>" class="card-img-top rounded-top" alt="nearby_listing" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                  <h5 class="fw-semibold text-primary mb-1"><%= near.title %></h5>
                  <p class="text-muted small mb-1">
                    <i class="bi bi-geo-alt-fill me-1"></i>
                    <%= near.location %>, <%= near.country %>
                  </p>
                  <p class="text-secondary small mb-2"><b>Category:</b> <%= near.category %></p>
                  <p class="fw-semibold text-dark mb-3">
                    ₹<%= near.price.toLocaleString("en-IN") %> / night
                  </p>
                  <a href="/listings/<%= near._id %>" class="btn btn-sm btn-outline-primary w-100">
                    <i class="bi bi-eye me-1"></i>View Details
                  </a>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>

      <!-- Reviews Section -->
      <hr class="my-5">
      <h3 class="mb-4 text-center fw-bold">Guest Reviews</h3>

      <% const validReviews = listing.reviews.filter(r => r && r.comment && r.comment.trim() !== ""); %>

      <% if (validReviews.length === 0) { %>
        <p class="text-center text-muted fst-italic">No reviews yet. Be the first to review!</p>
      <% } else { %>
        <div class="row row-cols-1 row-cols-md-2 g-4">
          <% validReviews.forEach(review => { %>
            <div class="col">
              <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                  <h6 class="fw-semibold mb-2 text-primary">
                    <i class="bi bi-person-circle me-1"></i>
                    <%= review.author ? review.author.username : 'Anonymous' %>
                  </h6>
                  <p class="mb-2">
                    <% for (let i = 1; i <= 5; i++) { %>
                      <% if (i <= review.rating) { %>
                        <span class="text-warning">&#9733;</span>
                      <% } else { %>
                        <span class="text-muted">&#9733;</span>
                      <% } %>
                    <% } %>
                    <span class="small text-muted ms-1">(<%= review.rating %>/5)</span>
                  </p>
                  <p class="card-text text-secondary"><%= review.comment %></p>
                  <% if (currentUser && review.author && currentUser._id.equals(review.author._id)) { %>
                    <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                      <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this review?');">
                        <i class="bi bi-trash me-1"></i>Delete Review
                      </button>
                    </form>
                  <% } %>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>

      <!-- Leave a Review Section -->
      <hr class="my-5">
      <% if (currentUser) { %>
        <div class="card shadow-sm border-0">
          <div class="card-body">
            <h4 class="mb-4 fw-bold text-center">Leave a Review</h4>

            <form method="POST" action="/listings/<%= listing._id %>/reviews" class="needs-validation" novalidate>
              <label for="rating" class="form-label fw-semibold">Rating</label>
              <fieldset class="starability-growRotate">
                <input type="radio" id="first-rate1" name="review[rating]" value="1" checked />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>

              <div class="mb-3">
                <label for="comment" class="form-label fw-semibold">Comment</label>
                <textarea class="form-control" id="comment" name="review[comment]" rows="3" required></textarea>
                <div class="invalid-feedback">Please add a comment.</div>
              </div>

              <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-send-fill me-1"></i>Submit Review
              </button>
            </form>
          </div>
        </div>
      <% } else { %>
        <p class="text-center">
          <a href="/login?returnTo=<%= listing._id %>">Log in</a> to leave a review.
        </p>
      <% } %>

    </div>
  </div>
</div>
