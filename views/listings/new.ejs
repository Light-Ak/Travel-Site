<% layout('layouts/boilerplate') %>

<div class="container my-3">
  <div class="row justify-content-center">
    <div class="col-lg-8">

      <!-- Page Header -->
      <h2 class="fw-bold mb-1">Add a new place</h2>
      <p class="text-muted mb-4">Share details about your space — title, description, location, and price.</p>

      <!-- Listing Form -->
      <form action="/listings" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">

        <!-- Section: Basic Info -->
        <h5 class="fw-semibold mt-4 mb-3">Basic Information</h5>

        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" id="title" name="listing[title]" class="form-control" placeholder="New Place" required>
          <div class="invalid-feedback">Please fill the title.</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea id="description" name="listing[description]" class="form-control" rows="4" placeholder="Describe what makes your place special" required></textarea>
          <div class="invalid-feedback">Please enter a short description.</div>
        </div>

        <div class="mb-3">
          <label for="category" class="form-label">Category</label>
          <select id="category" name="listing[category]" class="form-select">
            <option value="" selected disabled>Select a category</option>
            <option value="Mountains">Mountains</option>
            <option value="Seaside">Seaside</option>
            <option value="Camping">Camping</option>
            <option value="CountrySide">CountrySide</option>
            <option value="CityLife">CityLife</option>
            <option value="Beach">Beach</option>
          </select>
          <div class="invalid-feedback">Please select a category.</div>
        </div>

<div class="mb-4">
  <label for="image" class="form-label">Upload Image</label>
  <input type="file" id="image" name="listing[image]" class="form-control" required>
</div>


        <hr class="my-4">

        <!-- Section: Location -->
        <h5 class="fw-semibold mb-3">Location</h5>

        <div class="row">
          <div class="mb-3 col-md-6">
            <label for="country" class="form-label">Country</label>
            <input type="text" id="country" name="listing[country]" class="form-control" placeholder="Country" required>
            <div class="invalid-feedback">Please fill the country.</div>
          </div>

          <div class="mb-3 col-md-6">
            <label for="location" class="form-label">City / Area</label>
            <input type="text" id="location" name="listing[location]" class="form-control" placeholder="Location" required>
            <div class="invalid-feedback">Please fill the location.</div>
          </div>
        </div>

        <hr class="my-4">

        <!-- Section: Pricing -->
        <h5 class="fw-semibold mb-3">Pricing</h5>

        <div class="mb-4 col-md-4">
          <label for="price" class="form-label">Price per night</label>
          <div class="input-group">
            <span class="input-group-text">₹</span>
            <input type="number" id="price" name="listing[price]" class="form-control" placeholder="1000" required>
            <div class="invalid-feedback">Please fill the price.</div>
          </div>
        </div>

        <hr class="my-4">

        <!-- Submit -->
        <div class="d-flex justify-content-end">
          <a href="/listings" class="btn btn-outline-secondary me-2">Cancel</a>
          <button type="submit" class="btn btn-primary px-4 fw-semibold">Create Listing</button>
        </div>
      </form>
    </div>
  </div>
</div>
