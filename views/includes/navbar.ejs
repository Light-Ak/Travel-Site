<nav class="navbar navbar-expand-md navbar-light bg-light border-bottom shadow-sm sticky-top">
  <div class="container-fluid">

    <!-- Brand -->
    <a class="navbar-brand fw-bold text-primary d-flex align-items-center gap-2" href="/listings">
      <i class="fa fa-compass" aria-hidden="true"></i>
      <span>Travel Site</span>
    </a>

    <!-- Toggler for mobile -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Search Bar always visible -->
    <form action="/listings" method="GET" class="d-flex mx-3 flex-grow-1 flex-md-grow-0 flex-wrap align-items-center">
      <input 
        type="text" 
        name="search" 
        class="form-control me-2 mb-2 mb-md-0" 
        placeholder="Search by title or location..." 
        value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
      <% if (typeof selectedCategory !== 'undefined' && selectedCategory) { %>
        <input type="hidden" name="category" value="<%= selectedCategory %>">
      <% } %>
      <button class="btn btn-primary" type="submit">
        <i class="fa fa-search me-1"></i> Search
      </button>
    </form>

    <!-- Navbar Content (links + auth buttons) -->
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto mb-2 mb-md-0">
        <li class="nav-item">
          <a class="nav-link active fw-semibold" href="/listings">
            <i class="fa fa-home me-1"></i> Home
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link fw-semibold" href="/listings/new">
            <i class="fa fa-plus-circle me-1"></i> Add Listing
          </a>
        </li>
      </ul>

      <!-- Auth Buttons -->
      <div class="d-flex gap-2 ms-auto flex-wrap">
        <% if (!currentUser) { %>
          <a href="/login" class="btn btn-outline-primary mb-2 mb-md-0">
            <i class="fa fa-sign-in me-1"></i> Login
          </a>
          <a href="/signup" class="btn btn-primary mb-2 mb-md-0">
            <i class="fa fa-user-plus me-1"></i> Sign Up
          </a>
        <% } else { %>
          <a href="/profile" class="btn btn-outline-secondary mb-2 mb-md-0">
            <i class="fa fa-user me-1"></i> <%= currentUser.username %>
          </a>
          <form action="/logout" method="get" class="m-0">
            <button type="submit" class="btn btn-danger mb-2 mb-md-0">
              <i class="fa fa-sign-out me-1"></i> Logout
            </button>
          </form>
        <% } %>
      </div>
    </div>

  </div>
</nav>

